{% extends 'base.html.twig' %}

{% block fos_user_content %}
<div class="margin-top container-shadow-top">
	<div class="container">
		<ol class="breadcrumb">
		  <li><a href="{{ url('homepage') }}">Accueil</a></li>
		  <li><a href="{{ url('csid_customers') }}">Clients</a></li>
		  <li class="active">{% if customer is defined %}Modifier{% else %}Nouveau{% endif %}</li>
		</ol>
		<div class="title grid-full">
		    <h2>Client <small>{% if customer is defined %}Modifier{% else %}Nouveau{% endif %}</small></h2>
		    <span class="border"></span>
		</div>
		<form action="" {{ form_enctype(form) }} method="POST" class="csid_user_askactivation_form">
			{{ form_errors(form) }}
			{{ form_row(form._token) }}
			<div class="row">
				<div class="col-md-6">
		    		<div class="panel panel-border panel-info">
						<div class="panel-heading">Informations générales</div>
						<div class="panel-body">
							<div class="row">
								<div class="col-md-6">
									{{ form_row(form.lastname) }}
				    			</div>
				    			
				    			<div class="col-md-6">
									{{ form_row(form.firstname) }}
				    			</div>
				    			
				    			<div class="col-md-6">
				    				{{ form_row(form.username) }}
				    			</div>
				    			
				    			<div class="col-md-6">
									{{ form_row(form.company) }}
				    			</div>
			    			</div>
			    			{{ form_row(form.email) }}
						</div>
					</div>
					
				</div>
				<div class="col-md-6">
					<div class="panel panel-border panel-info">
						<div class="panel-heading">Adresse</div>
						<div class="panel-body">
							{{ form_row(form.address) }}
							<div class="row">
				    			<div class="col-md-6">
									{{ form_row(form.city) }}
				    			</div>
				    			<div class="col-md-6">
									{{ form_row(form.postal_code) }}
				    			</div>
							</div>
						</div>
					</div>
					
					<div class="panel panel-border panel-info">
						<div class="panel-heading">Mot de passe</div>
						<div class="panel-body">
							<div class="row">
				    			<div class="col-md-6">
									{{ form_row(form.plainPassword.first) }}
				    			</div>
				    			<div class="col-md-6">
									{{ form_row(form.plainPassword.second) }}
				    			</div>
				    			
				    		</div>
						</div>
					</div>
				</div>
			</div>
			<p class="text-right">
		        <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-primary" />
		    </p>
		</form>
	</div>
</div>
{% endblock %}

