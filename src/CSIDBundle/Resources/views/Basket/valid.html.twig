{% extends 'base.html.twig' %} 
{% block body %} 

<div class="container-shadow-top margin-top">
	<div class="container">
	
		<ol class="breadcrumb">
		  	<li><a href="{{ url('homepage') }}">Accueil</a></li>
		  	<li><a href="{{ url('csid_basket') }}">Panier</a></li>
		  	<li class="active">Valider le devis</li>
		</ol>
	
		<div class="title grid-full">
		    <h2>Valider le devis</h2>
		    <span class="border"></span>
		</div>
	
		<form action="/basket/valid" method="POST">
		{{ form_row(form._token) }}
		{{ form_errors(form) }}
	
			<div class="panel panel-border panel-info">
				<div class="panel-heading">Informations client</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-md-6">
							{{ form_row(form.customer_id) }}
							
							<div class="row">
					    			
				    			<div class="col-md-6">
									{{ form_row(form.lastname) }}
				    			</div>
				    			
				    			<div class="col-md-6">
									{{ form_row(form.firstname) }}
				    			</div>
				    			
				    			<div class="col-md-6">
									{{ form_row(form.company) }}
				    			</div>
			
				    			<div class="col-md-6">
									{{ form_row(form.email) }}
				    			</div>
			
				    			<div class="col-md-6">
									{{ form_row(form.adress) }}
				    			</div>
				    			
				    			<div class="col-md-6">
									{{ form_row(form.city) }}
				    			</div>
				    			<div class="col-md-6">
									{{ form_row(form.postal_code) }}
				    			</div>
				    			
				    		</div>
						</div>
						<div class="col-md-6">
							
						</div>
					</div>
				</div>
			</div>
			{% if is_granted('ROLE_RESELLER') %}
			<div class="panel panel-border panel-info">
				<div class="panel-heading">Autre</div>
				<div class="panel-body">
					{{ form_row(form.hide_to_csid) }}
				</div>
			</div>
			{% endif %}
			
			<p class="text-right"><button type="submit" class="btn btn-primary">Valider</button></p>
		</form>
	</div>
</div>

{% endblock %}

{% block javascripts %}
<script type="text/javascript">
{% if currentUser.retailer != null  %}
var $isCustomer = true;
{% else %}
var $isCustomer = false;
{% endif %}
</script>
<script src="/dist/js/basket.valid.min.js"></script>
{% endblock %}