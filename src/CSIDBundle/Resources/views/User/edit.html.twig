{% extends 'base.html.twig' %}

{% block body %}
	<div class="container-shadow-top margin-top">
		<div class="container">
		
			<ol class="breadcrumb">
			  <li><a href="{{ url('homepage') }}">Accueil</a></li>
			  <li class="active">Mes informations</li>
			</ol>
		
			<div class="title grid-full">
			    <h2>Editer mes infos</h2>
			    <span class="border"></span>
			</div> 
			<form action="{{ path('csid_user_edit') }}" {{ form_enctype(form) }} method="POST" class="csid_customer_edit_form">
				{% if not form.vars.valid %}
				<div class="alert alert-error">
				    {{ form_errors(form) }}
				</div>
				{% endif %}
				{{ form_row(form._token) }}
				<div class="row">
					<div class="col-md-6">
						
						<div class="panel panel-border panel-info">
							<div class="panel-heading">Informations générales</div>
							<div class="panel-body">
								<div class="row">
									<div class="col-md-6">
										{{ form_row(form.email) }}
									</div>
									<div class="col-md-6">
										{{ form_row(form.username) }}
									</div>
								</div>
								
								<div class="row">
									<div class="col-md-6">
										{{ form_row(form.lastname) }}
									</div>
			
									<div class="col-md-6">
										{{ form_row(form.firstname) }}
									</div>
			
									
									<div class="col-md-6">
										{{ form_row(form.company) }}
									</div>
									
									<div class="col-md-6">
										{{ form_row(form.siren) }}
									</div>
									<div class="col-md-6">
										{{ form_row(form.logo) }}
										
										{% if user.logo != null %}
											{% set foo = media_public_url(user.logo, 'reference') %}
							    			<img src="{{ foo|imagine_filter('heighten_120') }}" />
							    		{% endif %}
										
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="col-md-6">
						<div class="panel panel-border panel-info">
							<div class="panel-heading">Adresse</div>
							<div class="panel-body">
								{{ form_row(form.address) }}
								<div class="row">
									
			
									<div class="col-md-6">
										{{ form_row(form.city) }}
									</div>
									<div class="col-md-6">
										{{ form_row(form.postal_code) }}
									</div>
								</div>
							</div>
						</div>
						
						<div class="panel panel-border panel-info">
							<div class="panel-heading">Autre</div>
							<div class="panel-body">
								<div class="row">
									<div class="col-md-6">
										{{ form_row(form.margin_percent) }}
									</div>
									<div class="col-md-6">
										{{ form_row(form.command_no) }}
									</div>
								</div>
								<div class="row">
									<div class="col-md-6">
										{{ form_row(form.tva) }}
									</div>
									<div class="col-md-6">
										
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<p class="text-right">
					<input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-primary" />
				</p>
				{{ bootstrap_set_style('') }}
			</form>
				
		</div>
	</div>
{% endblock %}

 